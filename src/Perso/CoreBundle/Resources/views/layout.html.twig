<!DOCTYPE html>
<html lang="fr">
  <head>
    <title>{% block title %}Benjamin Barbin{% endblock %}</title>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta name="robots" content="noindex">
	

  {% block stylesheets %}

    {# On charge le CSS de bootstrap depuis le site directement #}

    <link href="{{ asset('bundles/perso/css/bootstrap.min.css') }}" rel="stylesheet">
    <link href="{{ asset('bundles/perso/css/perso.css') }}" rel="stylesheet">
    <link href="{{ asset('bundles/perso/css/starter-template.css') }}" rel="stylesheet">
	<link rel="stylesheet" href="{{ asset('bundles/perso/css/perso.css') }}" type="text/css" />
	
  {% endblock %}

        
    <link href="http://fonts.googleapis.com/css?family=Pacifico" rel="stylesheet" type="text/css">
	<link href="http://fonts.googleapis.com/css?family=Source+Sans+Pro" rel="stylesheet" type="text/css">
    <!-- HTML5 Shim and Respond.js IE8 support of HTML5 elements and media queries -->
    <!-- WARNING: Respond.js doesn't work if you view the page via file:// -->
    <!--[if lt IE 9]>
      <script src="https://oss.maxcdn.com/html5shiv/3.7.2/html5shiv.min.js"></script>
      <script src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js"></script>
    <![endif]-->
  </head>
  <body data-spy="scroll" data-target=".navbar">
    <div class="container">
        <header>
        
		{% for message in app.session.flashbag.get('msg_success') %}
	
			<div class="alert alert-success" role="alert"><button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>{{ message|raw }} </div>
	
		{% endfor %}
		{% if is_granted("IS_AUTHENTICATED_REMEMBERED") %}
			<p class="pull-right">Connecté en tant que {{ app.user.username }} - <a href="{{ path('fos_user_security_logout') }}">Déconnexion</a></p>
		{% else %}
			{# <p class="pull-right"><a href="{{ path('fos_user_security_login') }}">Connexion</a></p> #}
		{% endif %}
		
		{% if app.request.locale == 'en' %}
			<p id="language" class="pull-right"><a href="{{ path('perso_core_homepage', {'_locale' : 'fr' }) }}">Version française</a></p>
		{% else %}
			<p id="language" class="pull-right"><a href="{{ path('perso_core_homepage', {'_locale' : 'en' }) }}">English version</a></p>
		{% endif %}
        <!--
        ======================== Top =======================
        -->
        
            <div class="row">
                <section class="col-lg-2">
                    <img class="img-thumbnail" src="{{ asset('bundles/perso/images/photo_2.jpg') }}" alt="photo">
                </section>
                <section class="col-lg-10">
                    <h1 id="titre">Benjamin Barbin</h1><br />
                    <p id="description">Web-Marketing & Développement</p>
                </section>
            </div>
            
        <!--
        ======================== Naviguation =======================
        -->          
            
            <nav class="navbar navbar-default" id="nav-header">
            	<div class="container-fluid">
					<div class="navbar-header">
      					<a class="navbar-brand" href="{{ path('perso_core_homepage') }}">Benjamin Barbin</a>
    				</div>
                	<ul class="nav navbar-nav">
                   		<li class="active lislide"> <a href="#competence">{{ 'perso.core.navbar.competence'|trans }}</a> </li>
                    	<li class="lislide"> <a href="{{ path('perso_core_homepage') }}#experience">{{ 'perso.core.navbar.experience'|trans }}</a> </li>
                        <li class="lislide"> <a href="{{ path('perso_core_homepage') }}#formation" >{{ 'perso.core.navbar.formation'|trans }}</a> </li>
                    	<li class="lislide"> <a href="{{ path('perso_core_homepage') }}#contact">{{ 'perso.core.navbar.contact'|trans }}</a> </li>
                	</ul>
            	</div>
            </nav>
        </header>
        
        <!--
        ======================== Script PHP Email =======================
        -->
        
        {% block body %}

        {% endblock %}
        
        <!--
        ======================== Footer =======================
        -->
        
        <footer class="row">
        	<div class="col-lg-12">
            	<p class="text-center small">{{ 'perso.core.footer.realisation'|trans }} Benjamin B. &copy; 2015 - <a href="{{ path('perso_core_homepage') }}#contact" title="Me contacter">{{ 'perso.core.footer.contact'|trans }}</a></p>
            </div>
        </footer>

    </div><!-- /.container -->
    <script src="{{ asset('bundles/perso/js/jquery-1.11.3.js') }}"></script>
    <script src="{{ asset('bundles/perso/js/bootstrap.min.js') }}"></script>
	<script src="{{ asset('bundles/persoblog/ckeditor/ckeditor.js') }}"></script>
        <script>
		  	$(function () {
				$('body').scrollspy({ target: '.navbar' });
		  	});
			$(function () {
			 	$('.lislide>a').on('click', function(e) {
					e.preventDefault();
					var hash = this.hash;
					$('html, body').animate({
				  		scrollTop: $(this.hash).offset().top
					}, 1000, function(){
				  	window.location.hash = hash;
				});
			  });
			});
			$(function (){
  				$('a').tooltip();
			});
		</script>
	<script>
	  (function(i,s,o,g,r,a,m){i['GoogleAnalyticsObject']=r;i[r]=i[r]||function(){
	  (i[r].q=i[r].q||[]).push(arguments)},i[r].l=1*new Date();a=s.createElement(o),
	  m=s.getElementsByTagName(o)[0];a.async=1;a.src=g;m.parentNode.insertBefore(a,m)
	  })(window,document,'script','//www.google-analytics.com/analytics.js','ga');

	  ga('create', 'UA-2843107-7', 'auto');
	  ga('send', 'pageview');

	</script>
  </body>
</html>